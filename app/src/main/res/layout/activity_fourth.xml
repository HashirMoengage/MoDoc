<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <!-- Image at the top -->
    <ImageView
        android:id="@+id/appointment_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        />

    <!--        android:src="@drawable/doctor_image" -->


    <!-- Appointment Type -->
    <TextView
        android:id="@+id/appointment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Type of Appointment: General Checkup"
        android:layout_marginTop="16dp"/>

    <!-- Doctor Name -->
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor: Dr. John Smith"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <!-- Timing -->
    <TextView
        android:id="@+id/appointment_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timing: 10:00 AM - 11:00 AM"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Total Cost -->
    <TextView
        android:id="@+id/appointment_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Cost: $150"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <!-- Pay Now Button -->
        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay Now"/>

        <!-- Pay at the Clinic Button -->
        <Button
            android:id="@+id/btn_pay_at_clinic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pay at the Clinic"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

</LinearLayout>